{
  "name": "@eve/frontier-world",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build:mud && pnpm run build:abi && pnpm run build:abi-ts",
    "build:abi": "forge build",
    "build:abi-ts": "mud abi-ts",
    "build:mud": "rm -rf src/codegen && mud tablegen && mud worldgen",
    "deploy": "PRIVATE_KEY=$PRIVATE_KEY mud deploy --rpc $RPC_URL --alwaysRunPostDeploy",
    "clean": "rm -rf src/codegen && rm -rf out && rm -rf cache",
    "dev": "pnpm mud dev-contracts",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier 'src/**/*.sol' 'test/**/*.sol' './*.ts' --plugin=prettier-plugin-solidity --check",
    "prettier:write": "prettier 'src/**/*.sol' 'test/**/*.sol' './*.ts' --plugin=prettier-plugin-solidity --write",
    "fixFormat": "prettier 'src/**/*.sol' 'test/**/*' './*.ts' --plugin=prettier-plugin-solidity --write",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol'",
    "test": "tsc --noEmit && forge test -vvv"
  },
  "dependencies": {
    "@latticexyz/cli": "transaction-context",
    "@latticexyz/schema-type": "transaction-context",
    "@latticexyz/store": "transaction-context",
    "@latticexyz/world": "transaction-context",
    "@latticexyz/world-modules": "transaction-context",
    "@latticexyz/gas-report": "transaction-context",
    "@eve/frontier-smart-object-framework": "0.0.0",
    "@eve/common-constants": "0.0.0"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/node": "^18.15.11",
    "@types/prettier": "2.7.2",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "^3.3.7",
    "solhint-config-mud": "transaction-context",
    "solhint-plugin-mud": "transaction-context",
    "typescript": "^5.4.5"
  }
}
