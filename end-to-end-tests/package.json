{
  "name": "end-to-end-tests",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "forge build",
    "clean": "rm -rf src/codegen && rm -rf out && rm -rf cache",
    "createSmartCharacter:local": ". ./.env.local && forge script script/CreateSmartCharacter.s.sol:CreateSmartCharacter --fork-url $RPC_URL --private-key $PRIVATE_KEY --broadcast --sig \"run(address)\" $WORLD_ADDRESS -vvv",
    "createSmartCharacter:devnet": ". ./.env.devnet && forge script script/CreateSmartCharacter.s.sol:CreateSmartCharacter --fork-url $RPC_URL --private-key $PRIVATE_KEY --broadcast --sig \"run(address)\" $WORLD_ADDRESS -vvv",
    "createERC20:local": ". ./.env.local && forge script script/CreateERC20.s.sol:CreateERC20 --fork-url $RPC_URL --private-key $PRIVATE_KEY --broadcast --sig \"run(address)\" $WORLD_ADDRESS -vvv",
    "createERC20:devnet": ". ./.env.devnet && forge script script/CreateERC20.s.sol:CreateERC20 --fork-url $RPC_URL --private-key $PRIVATE_KEY --broadcast --sig \"run(address)\" $WORLD_ADDRESS -vvv",
    "mintERC20:local": ". ./.env.local && forge script script/MintERC20.s.sol:MintERC20 --fork-url $RPC_URL --private-key $PRIVATE_KEY --broadcast --sig \"run(address)\" $WORLD_ADDRESS -vvv",
    "mintERC20:devnet": ". ./.env.devnet && forge script script/MintERC20.s.sol:MintERC20 --fork-url $RPC_URL --private-key $PRIVATE_KEY --broadcast --sig \"run(address)\" $WORLD_ADDRESS -vvv",
    "createMintERC20:local": ". ./.env.local && forge script script/CreateMintERC20.s.sol:CreateMintERC20 --fork-url $RPC_URL --private-key $PRIVATE_KEY --broadcast --sig \"run(address)\" $WORLD_ADDRESS -vvv",
    "createMintERC20:devnet": ". ./.env.devnet && forge script script/CreateMintERC20.s.sol:CreateMintERC20 --fork-url $RPC_URL --private-key $PRIVATE_KEY --broadcast --sig \"run(address)\" $WORLD_ADDRESS -vvv",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier '**/*.sol' --write",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol'"
  },
  "dependencies": {
    "@eve/common-constants": "0.0.0",
    "@eve/frontier-smart-object-framework": "0.0.0",
    "@eve/frontier-world": "0.0.0",
    "@latticexyz/cli": "2.0.0-next.16",
    "@latticexyz/gas-report": "2.0.0-next.16",
    "@latticexyz/schema-type": "2.0.0-next.16",
    "@latticexyz/store": "2.0.0-next.16",
    "@latticexyz/world": "2.0.0-next.16",
    "@latticexyz/world-modules": "2.0.0-next.16"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/node": "^18.15.11",
    "@types/prettier": "2.7.2",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "^3.3.7",
    "solhint-config-mud": "2.0.0-next.16",
    "solhint-plugin-mud": "2.0.0-next.16",
    "typescript": "^5.4.5"
  }
}
